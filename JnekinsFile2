pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                bat 'javac Jenkins.java'
            }
        }

        stage('Run') {
            steps {
                bat 'java Jenkins'
            }
        }
    }

    post {
        success {
            echo '✅ Build and execution successful!'
        }
        failure {
            echo '❌ Build or execution failed!'
        }
    }
}
